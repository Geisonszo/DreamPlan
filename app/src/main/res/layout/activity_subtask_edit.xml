<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nama_gatsuo.dreamplan.SubtaskEditActivity" >

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:text="サブタスク"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/subTask_edit_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="開始日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.nama_gatsuo.dreamplan.View.DateView
            android:id="@+id/subTask_edit_startDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="終了日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.nama_gatsuo.dreamplan.View.DateView
            android:id="@+id/subTask_edit_endDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="ステータス"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/subTask_edit_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spnStatus_items"
            android:prompt="@string/spnStatus_prompt"/>

    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="説明" />

    <EditText
        android:id="@+id/subTask_edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存"
            android:onClick="onClickSave" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="キャンセル"
            android:onClick="onClickCancel" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="削除"
            android:onClick="onClickDelete" />
    </LinearLayout>
</LinearLayout>